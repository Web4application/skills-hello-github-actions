<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- Define all package sources -->
  <packageSources>
    <clear />

    <!-- Official NuGet feed for stable packages -->
    <add key="NuGet.org" value="https://api.nuget.org/v3/index.json" />

    <!-- Xamarin nightly/CI feed for pre-release builds -->
    <add key="Xamarin-Nightly" value="https://aka.ms/xf-nightly/index.json" />

    <!-- Private/internal feeds (no password here) -->
    <add key="NeomindAI-Internal" value="https://your-private-feed-url.com/nuget" />
    <add key="KubuPackages" value="https://packages.kubu.io/nuget" />
  </packageSources>

  <!-- Credentials for private feeds should use environment variables or CLI tokens -->
  <packageSourceCredentials>
    <NeomindAI-Internal>
      <add key="Username" value="%NEOMINDAI_USER%" />
      <add key="ClearTextPassword" value="%NEOMINDAI_TOKEN%" />
    </NeomindAI-Internal>
    <KubuPackages>
      <add key="Username" value="%KUBU_USER%" />
      <add key="ClearTextPassword" value="%KUBU_TOKEN%" />
    </KubuPackages>
  </packageSourceCredentials>

  <!-- Optional: disable local offline packages to enforce network sources -->
  <disabledPackageSources>
    <add key="Microsoft Visual Studio Offline Packages" value="true" />
  </disabledPackageSources>

</configuration>
